{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceRoot": "./src",
    "moduleResolution": "Node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}